    <profiles>
        <profile>
            <id>jkube</id>
            <properties>
                <jkube.resourceDir>${basedir}/src/componenttest/resources/jkube/app</jkube.resourceDir>
                <jkube.targetDir>${project.build.outputDirectory}/META-INF/jkube/app</jkube.targetDir>
                <jkube.kubernetesManifest>${project.build.outputDirectory}/META-INF/jkube/app/kubernetes.yml</jkube.kubernetesManifest>
                <jkube.skipHealthCheck>false</jkube.skipHealthCheck>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <version>3.0.0-M5</version>
                        <configuration>
                            <includes>
                                <include>**/componenttest/**/*Test.java</include>
                            </includes>
                            <systemPropertyVariables>
                                <app_port>31000</app_port>
                                <actuator_port>31001</actuator_port>
                                <wiremock_port>31090</wiremock_port>
                                <db_port>31005</db_port>
                            </systemPropertyVariables>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>integration-test</goal>
                                    <goal>verify</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.eclipse.jkube</groupId>
                        <artifactId>kubernetes-maven-plugin</artifactId>
                        <version>${jkube.version}</version>
                        <executions>
                            <execution>
                                <id>pre-integration-test</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>build</goal>
                                    <goal>resource</goal>
                                    <goal>apply</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>post-integration-test</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>undeploy</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <images>
                                <image>
                                    <name>twgorg/${project.artifactId}:${project.version}</name>
                                    <build>
                                        <contextDir>${project.basedir}/src/main</contextDir>
                                        <dockerFile>${project.basedir}/Dockerfile</dockerFile>
                                        <assembly>
                                            <name>target</name>
                                        </assembly>
                                        <args>
                                            <artifactId>${project.artifactId}</artifactId>
                                            <artifactVersion>${project.version}</artifactVersion>
                                        </args>
                                    </build>
                                </image>
                            </images>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

