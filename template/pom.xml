<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.6.3</version>
    </parent>

    <groupId>nz.co.twg.{{cookiecutter.prefix}}</groupId>
    <artifactId>{{cookiecutter.artifact_id}}</artifactId>
    <version>${revision}</version>
    <packaging>jar</packaging>
    <name>{{cookiecutter.artifact_id}}</name>
    <description>{{cookiecutter.artifact_id}}</description>
    <url>https://bitbucket.org/{{cookiecutter.organization_id}}/${project.artifactId}</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <maven.compiler.release>11</maven.compiler.release>
        <jersey.version>2.25.1</jersey.version>
        <!-- Log4j2 version overridden here to address CVE-2021-44228, CVE-2021-45046, CVE-2021-45105 -->
        <log4j2.version>2.17.1</log4j2.version>
        <image.path>docker.io/twgorg/${project.artifactId}:${project.version}</image.path>
        <sonar.projectName>${project.artifactId}</sonar.projectName>
        <sonar.host.url>https://sonarcloud.io</sonar.host.url>
        <sonar.organization>{{cookiecutter.organization_id}}</sonar.organization>
        <sonar.projectKey>{{cookiecutter.organization_id}}_${project.artifactId}</sonar.projectKey>
        <!-- matches the jacoco patterns -->
        <sonar.coverage.exclusions>
            **/config/**/*Config.java,
            **/config/**/*Properties.java,
            **/actuator/**/*Endpoint.java
        </sonar.coverage.exclusions>
        <!-- <sonar.login> property should be specified through arguments: -Dsonar.login="${TOKEN}"
             or SONAR_TOKEN environment variable -->
        <revision>1.0.0-SNAPSHOT</revision>
        <jkube.version>1.6.0</jkube.version>
        <jkube.docker.verbose>true</jkube.docker.verbose>
        <jkube.serviceUrl.waitSeconds>5</jkube.serviceUrl.waitSeconds>

        <!-- if jkube is run without a mvn profile, default to the "local" configs -->
        <jkube.resourceDir>${basedir}/src/componenttest/resources/jkube/local</jkube.resourceDir>
        <jkube.targetDir>${project.build.outputDirectory}/META-INF/jkube/local</jkube.targetDir>
        <jkube.kubernetesManifest>${project.build.outputDirectory}/META-INF/jkube/local/kubernetes.yml</jkube.kubernetesManifest>
        <!-- jkube tries to be smart and automatically add spring boot health checks based on some heuristics. However
             in "local" mode we do not want this to happen. -->
        <jkube.skipHealthCheck>true</jkube.skipHealthCheck>
    </properties>

    <build>
        <plugins>

            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <excludeDevtools>false</excludeDevtools>
                    <mainClass>nz.co.twg.service.{{cookiecutter.java_package_name}}.Application</mainClass>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>versions-maven-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                    <generateBackupPoms>false</generateBackupPoms>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.eclipse.jkube</groupId>
                <artifactId>kubernetes-maven-plugin</artifactId>
                <version>${jkube.version}</version>
            </plugin>

            <plugin>
                <groupId>org.openapitools</groupId>
                <artifactId>openapi-generator-maven-plugin</artifactId>
                <version>5.2.0</version>
                <configuration>
                    <configOptions>
                        <skipDefaultInterface>true</skipDefaultInterface>
                    </configOptions>
                    <generateApiTests>false</generateApiTests>
                    <generateModelTests>false</generateModelTests>
                    <typeMappings>
                        <typeMapping>integer=Long</typeMapping>
                        <typeMapping>int=Long</typeMapping>
                    </typeMappings>
                </configuration>
                <executions>
                    <execution>
                        <!-- Generates OpenAPI interface for current service -->
                        <id>server-api</id>
                        <configuration>
                            <configOptions>
                                <basePackage>nz.co.twg.service.{{cookiecutter.java_package_name}}.openapi.server</basePackage>
                                <apiPackage>nz.co.twg.service.{{cookiecutter.java_package_name}}.openapi.server.api</apiPackage>
                                <modelPackage>nz.co.twg.service.{{cookiecutter.java_package_name}}.openapi.server.model</modelPackage>
                                <interfaceOnly>true</interfaceOnly>
                            </configOptions>
                            <generateSupportingFiles>false</generateSupportingFiles>
                            <inputSpec>${project.basedir}/src/main/resources/openapi/openapi-spec.yaml</inputSpec>
                            <generatorName>spring</generatorName>
                            <library>spring-boot</library>
                        </configuration>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                    <execution>
                        <!-- Generates OpenFeign clients for inter-service communications -->
                        <id>client-api</id>
                        <configuration>
                            <configOptions>
                                <basePackage>nz.co.twg.service.{{cookiecutter.java_package_name}}.openapi.clients.thirdpartyapi</basePackage>
                                <apiPackage>nz.co.twg.service.{{cookiecutter.java_package_name}}.openapi.clients.thirdpartyapi.api</apiPackage>
                                <modelPackage>nz.co.twg.service.{{cookiecutter.java_package_name}}.openapi.clients.thirdpartyapi.model</modelPackage>
                            </configOptions>
                            <inputSpec>${project.basedir}/src/main/resources/openapi/clients/third-party-api/openapi-spec.yaml</inputSpec>
                            <generatorName>spring</generatorName>
                            <library>spring-cloud</library>
                        </configuration>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <version>0.14.0</version>
                <executions>
                    <execution>
                        <id>process-wsdl</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <args>
                                <arg>-XautoNameResolution</arg>
                            </args>
                            <schemaLanguage>WSDL</schemaLanguage>
                            <generatePackage>nz.co.twg.service.{{cookiecutter.java_package_name}}.wsdl</generatePackage>
                            <schemaDirectory>${project.basedir}/src/main/resources/wsdl</schemaDirectory>
                            <schemaIncludes>
                                <include>*.wsdl</include>
                            </schemaIncludes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>process-xsd</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <args>
                                <arg>-XautoNameResolution</arg>
                            </args>
                            <generatePackage>nz.co.twg.service.{{cookiecutter.java_package_name}}.xsd</generatePackage>
                            <schemaDirectory>${project.basedir}/src/main/resources/xsd</schemaDirectory>
                            <schemaIncludes>
                                <include>*.xsd</include>
                            </schemaIncludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.0.0-M5</version>
                <configuration>
                    <excludes>
                        <exclude>**/componenttest/**/*Test.java</exclude>
                        <exclude>**/smoketest/**/*Test.java</exclude>
                    </excludes>
                    <classpathDependencyExcludes>
                        <classpathDependencyExclude>org.apache.logging.log4j:log4j-slf4j-impl</classpathDependencyExclude>
                        <classpathDependencyExclude>ch.qos.logback:logback-classic</classpathDependencyExclude>
                    </classpathDependencyExcludes>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.7</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <!-- attached to Maven test phase -->
                    <execution>
                        <id>report</id>
                        <phase>test</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <excludes>
                        <!-- Spring configurations -->
                        <exclude>nz/co/twg/service/{{cookiecutter.java_package_name}}/config/**/*Config.*</exclude>
                        <exclude>nz/co/twg/service/{{cookiecutter.java_package_name}}/config/**/*Config$*.*</exclude>
                        <exclude>nz/co/twg/service/{{cookiecutter.java_package_name}}/config/**/*Properties.*</exclude>
                        <exclude>nz/co/twg/service/{{cookiecutter.java_package_name}}/config/**/*Properties$*.*</exclude>
                        <exclude>nz/co/twg/service/{{cookiecutter.java_package_name}}/**/actuator/*Endpoint.*</exclude>

                        <!-- generated code -->
                        <exclude>nz/co/twg/service/{{cookiecutter.java_package_name}}/openapi/**/*</exclude>
                        <exclude>nz/co/twg/service/{{cookiecutter.java_package_name}}/sdem/**/*</exclude>
                        <exclude>org/openapitools/configuration/*.*</exclude>
                    </excludes>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>3.10.0</version>
                <executions>
                    <execution>
                        <id>site</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>site</goal>
                        </goals>
                        <configuration>
                            <!-- do not allow the site plugin to generate reports since reports generation will be
                                 handled by the maven-surefire-report-plugin. -->
                            <generateReports>false</generateReports>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-report-plugin</artifactId>
                <version>3.0.0-M5</version>
                <configuration>
                    <alwaysGenerateSurefireReport>true</alwaysGenerateSurefireReport>
                    <alwaysGenerateFailsafeReport>true</alwaysGenerateFailsafeReport>
                    <linkXRef>false</linkXRef>
                </configuration>
                <executions>
                    <execution>
                        <id>report</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>report-only</goal>
                            <goal>failsafe-report-only</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.jsonschema2pojo</groupId>
                <artifactId>jsonschema2pojo-maven-plugin</artifactId>
                <version>1.1.1</version>
                <configuration>
                    <sourceDirectory>${project.basedir}/src/main/resources/sdem</sourceDirectory>
                    <targetPackage>nz.co.twg.service.{{cookiecutter.java_package_name}}.sdem</targetPackage>
                    <!-- matches openapi generator -->
                    <useBigDecimals>true</useBigDecimals>
                    <useLongIntegers>true</useLongIntegers>
                    <dateTimeType>java.time.OffsetDateTime</dateTimeType>
                    <dateType>java.time.LocalDate</dateType>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>com.google.errorprone</groupId>
                            <artifactId>error_prone_core</artifactId>
                            <version>2.4.0</version>
                        </path>
                        <path>
                            <groupId>org.mapstruct</groupId>
                            <artifactId>mapstruct-processor</artifactId>
                            <version>1.4.2.Final</version>
                        </path>
                        <path>
                            <groupId>com.uber.nullaway</groupId>
                            <artifactId>nullaway</artifactId>
                            <version>0.1.7</version>
                        </path>
                    </annotationProcessorPaths>
                    <showWarnings>true</showWarnings>
                    <compilerArgs>
                        <!-- this is required for ErrorProne to work -->
                        <arg>-XDcompilePolicy=simple</arg>
                        <arg>
                            -Xplugin:ErrorProne \
                            -XepExcludedPaths:.*/(target/generated-sources|src/test|src/componenttest|src/smoketest)/.+ \
                            -XepOpt:NullAway:AnnotatedPackages=nz.co.twg.service.{{cookiecutter.java_package_name}}
                        </arg>
                    </compilerArgs>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.2.0</version>
                <executions>
                    <execution>
                        <id>add-test-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-test-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/componenttest/java</source>
                                <source>src/smoketest/java</source>
                            </sources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>add-test-resource</id>
                        <goals>
                            <goal>add-test-resource</goal>
                        </goals>
                        <configuration>
                            <resources>
                                <resource>
                                    <directory>src/componenttest/resources</directory>
                                </resource>
                                <resource>
                                    <directory>src/smoketest/resources</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!--
                this plugin will check to ensure that there are no
                conflicts in the versions of dependencies in the
                dependency hierarchy.
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>1.4.1</version>
                <executions>
                    <execution>
                        <id>enforce-versions</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <rules>
                        <DependencyConvergence />
                    </rules>
                </configuration>
            </plugin>

            <!--
                Checkstyle for enforcing style conventions using the Google
                checkstyle config. Output is streamed to the console, and will
                fail builds when violations are detected.

                Our configuration is a combination of the Google style with some
                of our own preferences (e.g. 4 space indentation instead of 2).

                The plugin is configured to run the Google style checks first
                with the overridden checks disabled, and then runs our custom
                checks afterwards.

                Since our override consists of two separate configurations
                executed sequentially it is best not to run `mvn checkstyle`
                commands and to use `mvn process-sources` instead.
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <version>3.1.2</version>
                <dependencies>
                    <dependency>
                        <groupId>com.puppycrawl.tools</groupId>
                        <artifactId>checkstyle</artifactId>
                        <version>9.0</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <configLocation>google_checks.xml</configLocation>
                    <consoleOutput>true</consoleOutput>
                    <encoding>UTF-8</encoding>
                    <failsOnError>true</failsOnError>
                    <linkXRef>false</linkXRef>
                    <sourceDirectories>
                        <sourceDirectory>${project.build.sourceDirectory}</sourceDirectory>
                        <sourceDirectory>${project.build.testSourceDirectory}</sourceDirectory>
                    </sourceDirectories>
                </configuration>
                <executions>
                    <!-- Execution of the Google style checks -->
                    <execution>
                        <configuration>
                            <configLocation>google_checks.xml</configLocation>
                            <suppressionsLocation>src/etc/checkstyle/google_checks_suppressions.xml</suppressionsLocation>
                            <sourceDirectories>
                                <sourceDirectory>${project.build.sourceDirectory}</sourceDirectory>
                                <sourceDirectory>${project.build.testSourceDirectory}</sourceDirectory>
                            </sourceDirectories>
                        </configuration>
                        <goals>
                            <goal>check</goal>
                        </goals>
                        <id>google-checks</id>
                        <phase>process-sources</phase>
                    </execution>
                    <!-- Execution of the custom checks -->
                    <execution>
                        <configuration>
                            <configLocation>${project.basedir}/src/etc/checkstyle/twg_checks.xml</configLocation>
                            <sourceDirectories>
                                <sourceDirectory>${project.build.sourceDirectory}</sourceDirectory>
                                <sourceDirectory>${project.build.testSourceDirectory}</sourceDirectory>
                            </sourceDirectories>
                        </configuration>
                        <goals>
                            <goal>check</goal>
                        </goals>
                        <id>twg-checks</id>
                        <phase>process-sources</phase>
                    </execution>
                </executions>
            </plugin>

            <!--
                Spotless provides both coding standard checks as well as the
                ability to automatically format code.

                The plugin is configured to run the checks automatically,
                and will fail when issues are detected. Issues can be fixed by
                running:
                `mvn spotless:apply`.
            -->
            <plugin>
                <groupId>com.diffplug.spotless</groupId>
                <artifactId>spotless-maven-plugin</artifactId>
                <version>2.13.1</version>
                <configuration>
                    <formats>
                        <!-- Formatting rules for non-java files -->
                        <format>
                            <includes>
                                <include>*.gitignore</include>
                                <include>*.md</include>
                                <include>*.properties</include>
                                <include>*.xml</include>
                            </includes>
                            <endWithNewline />
                            <indent>
                                <spaces>true</spaces>
                                <spacesPerTab>4</spacesPerTab>
                            </indent>
                            <trimTrailingWhitespace />
                        </format>
                        <format>
                            <includes>
                                <include>*.json</include>
                                <include>*.yaml</include>
                            </includes>
                            <endWithNewline />
                            <indent>
                                <spaces>true</spaces>
                                <spacesPerTab>2</spacesPerTab>
                            </indent>
                            <trimTrailingWhitespace />
                        </format>
                    </formats>
                    <java>
                        <toggleOffOn />
                        <includes>
                            <include>src/componenttest/java/**/*.java</include>
                            <include>src/smoketest/java/**/*.java</include>
                            <include>src/main/java/**/*.java</include>
                            <include>src/test/java/**/*.java</include>
                        </includes>
                        <googleJavaFormat>
                            <version>1.11.0</version>
                        </googleJavaFormat>
                        <!--
                            The indent steps allow us to override the Google
                            style two space indentation with four spaces.
                            https://github.com/diffplug/spotless/issues/420#issuecomment-729501356
                        -->
                        <indent>
                            <tabs>true</tabs>
                            <spacesPerTab>2</spacesPerTab>
                        </indent>
                        <indent>
                            <spaces>true</spaces>
                            <spacesPerTab>4</spacesPerTab>
                        </indent>
                    </java>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>check</goal>
                        </goals>
                        <id>spotless-check</id>
                        <phase>process-sources</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

